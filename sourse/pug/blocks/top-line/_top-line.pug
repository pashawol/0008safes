mixin top-line()
	// start .top-line
	+b.top-line.block-with-lazy
		.container
			.row 
				+logo()(class="col-lg-auto col")
				.col-auto.order-lg-last
					+e.basket
						+icon("cart")
						+e.basket-count 99
						+e.basket-empty Ваша корзина пуста
				.col-auto.order-lg-last
					+contact-block()
							
				.col-lg.d-lg-flex.flex-lg-column-reverse

					ul
						li: a(href="#") взломостойкие
						li: a(href="#") Aiko
						li: a(href="#") айко
					+search()
							
	// end .top-line